<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.skinshortcuts" name="Skin Shortcuts" version="0.3.4" provider-name="Unfledged">
	<requires>
		<import addon="xbmc.python" version="2.14.0"/>
		<import addon="script.module.simplejson" version="3.3.0"/>
		<import addon="script.module.unidecode" version="0.4.14"/>
	</requires>
	<extension point="xbmc.python.library" library="default.py"/>
	<extension point="xbmc.addon.metadata">
		<description lang="en">Add-on for skins to provide simple managing and listing of user shortcuts (requires skin support)</description>
		<language></language>
		<platform>all</platform>
		<license>GNU General Public License, v2</license>
		<forum>http://forum.xbmc.org/showthread.php?tid=178294</forum>
		<website></website>
		<email></email>
		<source>https://github.com/unfledged</source>
	</extension>
</addon>

	<addon id="skin.refless" version="1.06" name="Refless" provider-name="Henrava">
	<requires>
		<import addon="xbmc.gui" version="5.0.1"/>
		<import addon="script.grab.fanart" version="0.13.0"/>
		<import addon="script.skinshortcuts" version="0.3.4"/>
		<import addon="service.library.data.provider" version="0.0.4"/>
	</requires>
	<extension point="xbmc.gui.skin" defaultthemename="Textures.xbt" effectslowdown="1.00" debugging="false">
		<res width="1280" height="720" aspect="16:9" default="true" folder="720p" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary>Refless by Henrava</summary>
		<description>Refless is a mod of the beautiful skin for XBMC made by Jeroen.</description>
		<disclaimer>Mouse and touchscreen use not supported</disclaimer>
		<license>Attribution-NonCommercial-ShareAlike 4.0</license>
		<source>https://github.com/henrava/skin.refless/</source>
	</extension>
</addon>

<addon id="xbmc.repo.henrava" name="Henrava Repository" version="1.0.1" provider-name="Henrava">
    <extension point="xbmc.addon.repository" name="Henrava skin Repository">
        <info>http://github.com/henrava/xbmc.repo.henrava/raw/master/addons.xml</info>
        <checksum>http://github.com/henrava/xbmc.repo.henrava/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">https://github.com/henrava/xbmc.repo.henrava/raw/master/download/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Henrava Repository</summary>
        <description>Repo for Refless skin</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
    </extension>
</addon>
</addons>